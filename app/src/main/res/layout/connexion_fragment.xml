<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/idententifiez_vous"
        style="@style/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/identifiez_vous" />

    <EditText
        android:id="@+id/pwd"
        style="@style/editText"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/login"
        android:layout_below="@+id/login"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_create_account"
        style="@style/btn_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/create_account"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_login"
        style="@style/btn_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_create_account"
        android:layout_below="@+id/pwd"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Identifiez-vous"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_create_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/forget_mdp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        style="@style/small_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="@string/login_infos"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/login"
        style="@style/editText"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email_txt"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login"
        android:layout_below="@+id/idententifiez_vous"
        android:text="E-mail" />

    <TextView
        android:id="@+id/mdp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pwd"
        android:layout_below="@+id/login"
        android:layout_marginTop="12dp"
    
        android:text="Mot de passe" />

</RelativeLayout>