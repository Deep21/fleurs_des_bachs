<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/magenta</item>
        <item name="android:icon">@drawable/abc_ab_share_pack_holo_light</item>

        <!-- Support library compatibility -->
        <item name="background">@color/magenta</item>
        <!-- Support library compatibility -->
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_product">
        <item name="android:textColor" parent="@android:style/Widget.Button">@color/white</item>
        <item name="android:textSize">@dimen/btn_dim</item>
        <item name="android:background">@drawable/btn_selector</item>
    </style>

    <style name="btn_yellow">
        <item name="android:textColor" parent="@android:style/Widget.Button">@color/white</item>
        <item name="android:textSize">@dimen/btn_dim</item>
        <item name="android:background">@drawable/btn_selector_yellow</item>
    </style>

    <style name="product_h1" parent="@style/h1_herit">
        <item name="android:textSize">@dimen/product_detail_title</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="padding" parent="@android:style/TextAppearance">
        <item name="android:padding">15dp</item>
    </style>

    <style name="product_h3" parent="@style/h1_herit">
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="product_h4_title" parent="@style/h1_herit">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/product_h4_title</item>
    </style>

    <style name="h1_herit">
        <item name="android:padding">5dp</item>
    </style>

    <style name="small_info">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="h1" parent="@style/h1_herit">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/corner_layout</item>
    </style>

</resources>